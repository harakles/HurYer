@using HurriyetciYerelSen.EDMX
@using HurriyetciYerelSen.Controllers
@using PagedList
@using PagedList.Mvc
@model IPagedList<SystemMedia>
@{
    ViewBag.Title = "Haberler";
}
<section class="breadcrumb-area" style="background-image: url( );">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="inner-content text-center clearfix">
                    <div class="title wow slideInUp animated" data-wow-delay="0.3s" data-wow-duration="1500ms">
                        <h2>Haberler</h2>
                    </div>
                    <div class="breadcrumb-menu wow slideInDown animated" data-wow-delay="0.3s" data-wow-duration="1500ms">
                        <ul class="clearfix">
                            <li><a href="/TR/AnaSayfa">Ana Sayfa</a></li>
                            <li><i class="fa fa-angle-double-right" aria-hidden="true"></i></li>
                            <li class="active">Haberler</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="blog-area">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-7">
                <div class="blog-post">
                    @foreach (var x in Model)
                    {
                        <a href="/TR/HaberDetay/@x.Id">
                            <div class="single-blog-style1 style1instyle3 wow fadeInLeft" data-wow-delay="100ms" data-wow-duration="1500ms">
                                <div class="img-holder">
                                    <div class="inner cover-img">
                                        <img src="@Sabit.Admin@x.MediaCoverPhoto" alt="Awesome Image">
                                    </div>
                                    <div class="date-box">
                                        <h3>@x.MediaDate.Value.Day<br><span>@x.MediaDate.Value.ToString("MMM")</span></h3>
                                    </div>
                                </div>
                                <div class="text-holder">
                                    <ul class="meta-info">
                                        <li><span class="flaticon-user thm-clr"></span><a href="#">Yönetici</a></li>
                                        <li><span class="flaticon-open-archive thm-clr"></span>Haberler</li>
                                    </ul>
                                    <h3>@x.MediaTittle</h3>
                                    <div class="text">
                                        <p>@x.MediaQuote</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }

                </div>
                <div class="row">
                    <div class="col-xl-12">
                        @Html.PagedListPager(Model, page => Url.Action("Haberler", new { page }))
                    </div>
                </div>
            </div>

            <!--Start sidebar Wrapper-->
            <div class="col-xl-4 col-lg-5 col-md-9 col-sm-12">
                <div class="sidebar-wrapper">
                    <!--Start single sidebar-->
                    <div class="single-sidebar wow fadeInUp animated" data-wow-delay="0.1s" data-wow-duration="1200ms">
                        <div class="sidebar-search-box">
                            @if (Model.Count() >= 1)
                            {
                                <form class="search-form">
                                    <input placeholder="Ara...." type="text" id="MediaSearch" data-typeid="@Model[0].MediaTypeID">
                                    <button type="button" id="MediaSearchButton"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </form>
                            }
                            else
                            {
                                <form class="search-form">
                                    <input placeholder="Ara...." type="text" id="MediaSearch" data-typeid="1">
                                    <button type="button" id="MediaSearchButton"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </form>
                            }
                        </div>
                    </div>
                    <!--End single sidebar-->
                    <!--Start sidebar categories Box-->
                    <div class="single-sidebar wow fadeInUp animated" data-wow-delay="0.3s" data-wow-duration="1200ms">
                        <div class="title">
                            <h3>Hızlı Menü</h3>
                        </div>
                        <div class="categories-box">
                            <ul class="categories clearfix">
                                <li class="active"><a href="/TR/Haberler">Haberler</a></li>
                                <li><a href="/TR/Duyurular">Duyurular</a></li>
                            </ul>
                        </div>
                    </div>
                    <!--End sidebar categories Box-->
                </div>
            </div>
            <!--End Sidebar Wrapper-->


        </div>
    </div>
</section>
<!--End Blog Area-->
@section scripts{
    <script src="~/assets/pageScripts/MediaSearch.js"></script>
}