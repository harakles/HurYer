@using HurriyetciYerelSen.Models
@using HurriyetciYerelSen.Controllers
@model HomePageModel
@{
    ViewBag.Title = "AnaSayfa";
}
<section class="main-slider style1">
    <div class="slider-box">
        <div class="banner-carousel owl-theme owl-carousel">
            @foreach (var x in Model.News)
            {
                <div class="slide">
                    <div class="image-layer"
                         style="
                  background-image: url(@Sabit.Admin@x.MediaCoverPhoto);
                "></div>
                    <div class="auto-container">
                        <div class="content right">
                            <h3>Güncel Haber</h3>
                            <h2>
                                son dakika<br />
                                @x.MediaTittle
                            </h2>
                            <div class="btns-box">
                                <a class="btn-one" href="/TR/HaberDetay?Id=@x.Id"><span class="txt">Devamını Oku</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- End Main Slider -->
<!--Start Blog Style1 Area-->
<section class="blog-style1-area">
    <div class="container">
        <div class="sec-title text-center">
            <h3>Son Duyurular</h3>
            <h2>
                Yayınlanan Güncel<br />
                <span>ve Son Duyurular.</span>
            </h2>
        </div>
        <div class="row">
            @foreach (var x in Model.Announcment)
            {
                <div class="col-xl-4 col-lg-4">
                    <div class="single-blog-style1 wow fadeInLeft"
                         data-wow-delay="100ms"
                         data-wow-duration="1500ms">
                        <div class="img-holder">
                            <div class="inner">
                                <img src="@Sabit.Admin@x.MediaCoverPhoto"
                                     alt="Awesome Image" />
                            </div>
                            <div class="date-box">
                                <h3>@x.MediaDate.Value.ToString("dd")<br /><span>@x.MediaDate.Value.ToString("MMM")</span></h3>
                            </div>
                        </div>
                        <div class="text-holder">
                            <ul class="meta-info">
                                <li>
                                    <span class="flaticon-user thm-clr"></span><a href="/TR/DuyuruDetay?Id=@x.Id">Yönetici</a>
                                </li>
                                <li>
                                    <span class="flaticon-open-archive thm-clr"></span><a href="/TR/DuyuruDetay?Id=@x.Id">Son Duyurular</a>
                                </li>
                            </ul>
                            <h3><a href="/TR/DuyuruDetay?Id=@x.Id">@x.MediaTittle</a></h3>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!--End Blog Style1 Area-->
