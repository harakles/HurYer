@using HurriyetciYerelSen.EDMX
@model Application
<section class="faq-content-area">
    <div class="layer-outer float-bob-y" style="background-image: url()"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="faq-content-box-style2">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="question-form">
                                <div class="sec-title text-center">
                                    <h3>Online Başvur</h3>
                                </div>
                                <form id="form" action="/TR/OnlineBasvuru" method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p>Ad</p>
                                            <input type="text" id="ApplicationName" name="ApplicationName" value="@Model.ApplicationName" placeholder="Ad*" required="">
                                        </div>
                                        <div class="col-md-6">
                                            <p>Soyad</p>
                                            <input type="text" id="ApplicationSurname" name="ApplicationSurname" value="@Model.ApplicationSurname" placeholder="Soyad*" required="">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p>TC Kimlik Numarası</p>
                                            <input type="text" id="ApplicationIdentityNumber" name="ApplicationIdentityNumber" value="@Model.ApplicationIdentityNumber" placeholder="TC Kimlik Numarası*" required="">
                                        </div>
                                        <div class="col-md-6 ">
                                            <p>Cinsiyet</p>
                                            @Html.DropDownListFor(x => x.ApplicationGenderID, (SelectList)ViewBag.GenderSelect, " - Seçiniz- ", new { @class = "form-select form-control select2" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p>Baba Adı</p>
                                            <input type="text" id="ApplicationFatherName" name="ApplicationFatherName" value="@Model.ApplicationFatherName" placeholder="Baba Adı*" required="">
                                        </div>
                                        <div class="col-md-6">
                                            <p>Anne Adı</p>
                                            <input type="text" id="ApplicationMotherName" name="ApplicationMotherName" value="@Model.ApplicationMotherName" placeholder="Anne Adı*" required="">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p>Doğum Yeri</p>
                                            <input type="text" id="ApplicationBornPlace" name="ApplicationBornPlace" value="@Model.ApplicationBornPlace" placeholder="Doğum Yeri*" required="">
                                        </div>
                                        <div class="col-md-6">
                                            <p>Doğum Tarihi</p>
                                            <input type="date" id="ApplicationBornDate" class="datepicker" name="ApplicationBornDate" value="@Model.ApplicationBornDate" placeholder="Doğum Tarihi*" required="">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p>Eğitim</p>
                                            @Html.DropDownListFor(x => x.ApplicationEducationID, (SelectList)ViewBag.EducationSelect, " - Seçiniz- ", new { @class = "form-select form-control select2" })
                                        </div>
                                        <div class="col-md-6">
                                            <p>Kadronuzun Bağlı Olduğu Kurum</p>
                                            @Html.DropDownListFor(x => x.ApplicationOrganisationID, (SelectList)ViewBag.OrganisationSelect, " - Seçiniz- ", new { @class = "form-select form-control select2" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p>İşyeri İsmi</p>
                                            <input type="text" id="ApplicationWorkPlaceName" name="ApplicationWorkPlaceName" value="@Model.ApplicationWorkPlaceName" placeholder="İş Yeri*" required="">
                                        </div>
                                        <div class="col-md-6">
                                            <p>Cep Telefonu</p>
                                            <input type="text" class="phone-mask" id="ApplicationPhoneNumber" name="ApplicationPhoneNumber" value="@Model.ApplicationPhoneNumber" placeholder="Telefon Numaranız*" required="">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p>İl İsmi</p>
                                            @Html.DropDownListFor(x => x.ApplicationProvinceID, (SelectList)ViewBag.ProvinceSelect, " - Seçiniz- ", new { @class = "form-select form-control select2" })
                                        </div>
                                        <div class="col-md-6">
                                            <p>İlçe İsmi</p>
                                            <select id="ApplicationDistrictID" name="ApplicationDistrictID" class="form-select form-control select2">
                                                <option>- Seçiniz -</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p>Kadro Unvanı</p>
                                            @Html.DropDownListFor(x => x.ApplicationStaffID, (SelectList)ViewBag.StaffSelect, " - Seçiniz- ", new { @class = "form-select form-control select2" })
                                        </div>
                                        <div class="col-md-6">
                                            <p>Kan Grubu</p>
                                            @Html.DropDownListFor(x => x.ApplicationBloodTypeID, (SelectList)ViewBag.BloodType, " - Seçiniz- ", new { @class = "form-select form-control select2" })
                                        </div>
                                    </div>
                                    <div class="row justify-content-center">
                                        <div class="col-md-6 justify-content-center">
                                            <p>E-Posta Adresi</p>
                                            <input type="text" id="ApplicationEmail" name="ApplicationEmail" value="@Model.ApplicationEmail" placeholder="E-Posta Adresiniz" required="">
                                        </div>
                                    </div>
                                    <div class="row justify-content-center align-content-center">
                                        <div class="col-md-6 ">
                                            <button type="button" onclick="Validate()" class="btn btn-primary">Onayla</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/assets/pageScripts/Uyelik.js"></script>
}
