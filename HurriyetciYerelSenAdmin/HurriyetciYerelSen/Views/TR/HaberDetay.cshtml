@using HurriyetciYerelSen.EDMX
@using HurriyetciYerelSen.Controllers
@model SystemMedia
@{
    ViewBag.Title = "HaberDetay";
    var data = Request; 
}
<!--Start breadcrumb area-->
<section class="breadcrumb-area" style="background-image: url( );">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="inner-content text-center clearfix">
                    <div class="title wow slideInUp animated" data-wow-delay="0.3s" data-wow-duration="1500ms">
                        <h2>Haber Detayı</h2>
                    </div>
                    <div class="breadcrumb-menu wow slideInDown animated" data-wow-delay="0.3s" data-wow-duration="1500ms">
                        <ul class="clearfix">
                            <li><a href="/TR/Haberler">Haberler</a></li>
                            <li><i class="fa fa-angle-double-right" aria-hidden="true"></i></li>
                            <li class="active">Haber Datayı</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End breadcrumb area-->
<!--Start Blog single Area-->
<section class="blog-area blog-single-area">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-7">
                <div class="blog-post">
                    <div class="single-blog-style1 style1instyle3">
                        <div class="img-holder">
                            <div class="inner cover-img">
                                <img src="@Sabit.Admin@Model.MediaCoverPhoto" alt="Awesome Image">
                            </div>
                            <div class="date-box">
                                <h3>@Model.MediaDate.Value.ToString("dd")<br><span>@Model.MediaDate.Value.ToString("MMM")</span></h3>
                            </div>
                        </div>
                        <div class="text-holder">
                            <ul class="meta-info">
                                <li><span class="flaticon-user thm-clr"></span><a href="#">Yönetici</a></li>
                                <li><span class="flaticon-open-archive thm-clr"></span><a href="#">Haberler</a></li>
                            </ul>
                            <h3><a href="#">@Model.MediaTittle</a></h3>
                            <div class="text">
                                <p>@Model.MediaQuote</p>
                            </div>
                        </div>
                    </div>
                    <div class="blog-details-text-box-one">
                        @Html.Raw(Model.MediaTextEditor)
                    </div>
                    <div class="blog-details-text-box-two">
                        <div class="single-sidebar wow fadeInUp animated" data-wow-delay="0.7s" data-wow-duration="1200ms">
                            <div class="top">
                                <div class="title">
                                    <h3>Fotoğraflar</h3>
                                </div>
                            </div>
                            <ul class="instagram">
                                @foreach (var x in Model.Galleries)
                                {
                                    <li>
                                        <div class="img-box">
                                            <img src="@Sabit.Admin@x.MediaUrl.Url" alt="Awesome Image">
                                            <div class="overlay-content">
                                                <a class="lightbox-image" data-fancybox="gallery" href="@Sabit.Admin@x.MediaUrl.Url">
                                                    <i class="fa fa-search-plus" aria-hidden="true"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="tag-box">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="right pull-right">
                                    <ul class="sociallinks-style-two float-left fix">
                                        <li><a href="https://www.facebook.com/sharer/sharer.php?u=@Request.Url.AbsoluteUri"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                        <li><a href="https://twitter.com/intent/tweet?url=@Request.Url.AbsoluteUri&text=@Model.MediaTittle"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                        <li><a href="https://www.linkedin.com/shareArticle?url=@Request.Url.AbsoluteUri"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

            <!--Start sidebar Wrapper-->
            <div class="col-xl-4 col-lg-5 col-md-9 col-sm-12">
                <div class="sidebar-wrapper">
                    <!--Start single sidebar-->
                    <div class="single-sidebar wow fadeInUp animated" data-wow-delay="0.1s" data-wow-duration="1200ms">
                        <div class="sidebar-search-box">
                            <form class="search-form">
                                <input placeholder="Ara...." type="text" id="MediaSearch" data-typeid="@Model.MediaTypeID">
                                <button type="button" id="MediaSearchButton"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    </div>
                    <!--End single sidebar-->
                    <!--Start sidebar categories Box-->
                    <div class="single-sidebar wow fadeInUp animated" data-wow-delay="0.3s" data-wow-duration="1200ms">
                        <div class="title">
                            <h3>Hızlı Menü</h3>
                        </div>
                        <div class="categories-box">
                            <ul class="categories clearfix">
                                <li class="active"><a href="/TR/Haberler">Haberler</a></li>
                                <li><a href="/TR/Duyurular">Duyurular</a></li>
                            </ul>
                        </div>
                    </div>
                    <!--End sidebar categories Box-->
                    @Html.Action("SonMedyalar", "TR", new {Id = Model.MediaTypeID })
                </div>
            </div>
            <!--End Sidebar Wrapper-->

        </div>
    </div>
</section>
<!--End Blog single Area-->