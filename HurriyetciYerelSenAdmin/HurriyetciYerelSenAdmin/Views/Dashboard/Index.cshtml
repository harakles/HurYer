@using HurriyetciYerelSenAdmin.Models
@model DashboardModal
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row match-height">
        <div class="col-xl-4 mb-4 col-lg-5 col-12">
            <div class="card">
                <div class="d-flex align-items-end row mt-auto">
                    <div class="col-7 mb-auto">
                        <div class="card-body text-nowrap">
                            <h5 class="card-title mb-0">Sisteme Hoşgeldin</h5>
                            <h4 class="text-primary mb-1">@Model.User.UserName @Model.User.UserSurname</h4>
                        </div>
                    </div>
                    <div class="col-5 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="../../assets/img/illustrations/card-advance-sale.png"
                                 height="140"
                                 alt="view sales" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="badge p-2 bg-label-info mb-2 rounded"><i class="ti ti-article ti-md"></i></div>
                    <h5 class="card-title mb-1 pt-2">Toplam Yayınlanan Haber</h5>
                    <p class="mb-2 mt-1">@Model.TotalNewsCount</p>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="badge p-2 bg-label-success mb-2 rounded"><i class="ti ti-volume-2 ti-md"></i></div>
                    <h5 class="card-title mb-1 pt-2">Toplam Yayınlanan Duyuru</h5>
                    <p class="mb-2 mt-1">@Model.TotalAnounceCount</p>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="badge p-2 bg-label-primary mb-2 rounded"><i class="ti ti-books ti-md"></i></div>
                    <h5 class="card-title mb-1 pt-2">Toplam Yayınlanan Dilekçe</h5>
                    <p class="mb-2 mt-1">@Model.TotalPetitionCount</p>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="badge p-2 bg-label-danger mb-2 rounded"><i class="ti ti-gavel ti-md"></i></div>
                    <h5 class="card-title mb-1 pt-2">Toplam Yayınlanan Mahkeme Kararı</h5>
                    <p class="mb-2 mt-1">@Model.TotalCourtCount</p>
                </div>
            </div>
        </div>

    </div>
    <div class="row match-height">
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="badge p-2 bg-label-success mb-2 rounded"><i class="ti ti-user-exclamation ti-md"></i></div>
                    <h5 class="card-title mb-1 pt-2">Toplam Alınan Eylem Kararı</h5>
                    <p class="mb-2 mt-1">@Model.TotalActionCount</p>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="badge p-2 bg-label-secondary mb-2 rounded"><i class="ti ti-user-plus ti-md"></i></div>
                    <h5 class="card-title mb-1 pt-2">Toplam Online Başvuru</h5>
                    <p class="mb-2 mt-1">@Model.TotalAppealCount</p>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="badge p-2 bg-label-primary mb-2 rounded"><i class="ti ti-users ti-md"></i></div>
                    <h5 class="card-title mb-1 pt-2">Siteye Ziyaret Sayısı</h5>
                    <p class="mb-2 mt-1">@Model.TotalVisitCount</p>
                </div>
            </div>
        </div>
        <div class="col-xl-4 mb-4 col-lg-5 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex flex-column">
                            <div class="card-title mb-auto">
                                <h5 class="mb-1 text-nowrap">Online Başvuru Oranları</h5>
                            </div>
                            <div class="card-body">
                                <div id="generatedLeadsChart"></div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        var oran1 = @Model.Chart[0];
        var oran2 = @Model.Chart[1];
        var oran3 = @Model.Chart[2];
    </script>
    <script src="~/assets/PageScripts/Dashboard.js"></script>
}
