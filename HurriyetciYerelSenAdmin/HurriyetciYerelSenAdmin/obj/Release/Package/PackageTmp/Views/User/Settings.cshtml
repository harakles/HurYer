@using HurriyetciYerelSenAdmin.EDMX
@model User
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcı Profili /</span> Ayarlar</h4>

<!-- Header -->
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="user-profile-header-banner">
                <img src="../../assets/img/pages/profile-banner.png" alt="Banner image" class="rounded-top profile-banner" />
            </div>
            <div class="user-profile-header d-flex flex-column flex-sm-row text-sm-start text-center mb-4 col-12">
                <div class="flex-shrink-0 mt-n2 mx-sm-0 mx-auto  col-2">
                    <img src="@Model.UserProfilePic"
                         alt="user image"
                         class="d-block h-auto ms-0 ms-sm-4 rounded Setting-user-profile-img" />
                </div>
                <div class="flex-grow-1 mt-3 mt-sm-5 col-9 ps-5">
                    <div class="d-flex align-items-md-end align-items-sm-start align-items-center justify-content-md-between justify-content-start mx-4 flex-md-row flex-column gap-4">
                        <div class="user-profile-info">
                            <h4>@Model.UserName @Model.UserSurname</h4>
                            <ul class="list-inline mb-0 d-flex align-items-center flex-wrap justify-content-sm-start justify-content-center gap-2">
                                <li class="list-inline-item"><i class="ti ti-phone"></i>@Model.UserPhoneNumber</li>
                                <li class="list-inline-item"><i class="ti ti-mail"></i>@Model.UserEmail</li>
                                <li class="list-inline-item"><i class="ti ti-user"></i>@Model.UserClass.UserClassName</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ Header -->